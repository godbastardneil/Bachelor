@{
    ViewData["Title"] = "Добавление студента в группу " + @ViewBag.name;
}

<div class="text-center">
    <h1 class="display-4">Добавление студента в группу @ViewBag.name</h1>
    <form method="post" class="text-left">
        <input type="text" name="idgroup" id="idgroup" value="@ViewBag.idgroup" hidden>

        <snap>
            <label for="idstudent"><b>Номер зачётки: </b></label>
            <input type="number" name="idstudent" id="idstudent" class="w-100" required>
        </snap>
        <snap>
            <label for="FIO"><b>Фамилия Имя Отчество: </b></label>
            <input type="text" name="FIO" id="FIO" class="w-100" required>
        </snap>
        <snap>
            <label for="headman_sign"><b>Староста? </b></label>
            <input type="checkbox" name="headman_sign" id="headman_sign"` value="false">
        </snap>
        <input type="submit" value="Сохранить">
    </form>
</div>